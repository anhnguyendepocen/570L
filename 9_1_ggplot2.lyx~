<<fig.height=3, fig.width=5>>=
\end_layout

\begin_layout Plain Layout

ggplot( data=iris, aes(x=Sepal.Length, y=Petal.Length, color=Species) ) +
  
\end_layout

\begin_layout Plain Layout

  geom_point( ) +
\end_layout

\begin_layout Plain Layout

  geom_smooth( method='lm' ) # fit a regression to each species
\end_layout

\begin_layout Plain Layout

